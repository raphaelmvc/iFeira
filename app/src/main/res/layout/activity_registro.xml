<?xml version="1.0" encoding="utf-8" ?>


<androidx.core.widget.NestedScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:src="@drawable/ifeira"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/containerComponents"
            style="@style/ContainerComponentsCadastro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo"
            />
        <View
            android:id="@+id/containerComponents2"
            style="@style/ContainerComponentsCadastro2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/containerComponents"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <EditText
            android:id="@+id/edit_usuario"
            style="@style/Edit_Text"
            android:hint="UsuÃ¡rio"
            android:drawableRight="@drawable/ic_email"
            android:inputType="textEmailAddress"
            app:layout_constraintStart_toStartOf="@id/containerComponents"
            app:layout_constraintEnd_toEndOf="@id/containerComponents"
            app:layout_constraintTop_toTopOf="@id/containerComponents"
            />
        <EditText
            android:id="@+id/edit_email"
            style="@style/Edit_Text"
            android:hint="Email"
            android:drawableRight="@drawable/ic_email"
            android:inputType="textEmailAddress"
            app:layout_constraintStart_toStartOf="@id/containerComponents"
            app:layout_constraintEnd_toEndOf="@id/containerComponents"
            app:layout_constraintTop_toBottomOf="@+id/edit_usuario"
            />

        <EditText
            android:id="@+id/edit_senha"
            style="@style/Edit_Text"
            android:hint="Senha"
            android:drawableRight="@drawable/ic_email"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@id/containerComponents"
            app:layout_constraintEnd_toEndOf="@id/containerComponents"
            app:layout_constraintTop_toBottomOf="@id/edit_email"
            />
        <EditText
            android:id="@+id/edit_confirmasenha"
            style="@style/Edit_Text"
            android:hint="Senha"
            android:drawableRight="@drawable/ic_email"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@id/containerComponents"
            app:layout_constraintEnd_toEndOf="@id/containerComponents"
            app:layout_constraintTop_toBottomOf="@id/edit_senha"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_cadastrar"
            style="@style/Button"
            android:text="@string/cadastrar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_confirmasenha"
            />

        <TextView
            android:id="@+id/registro3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registro3"
            android:textColor="@color/branco"
            app:layout_constraintEnd_toStartOf="@+id/registro4"
            app:layout_constraintBottom_toBottomOf="@+id/containerComponents2"
            app:layout_constraintStart_toStartOf="@+id/containerComponents2" />

        <TextView
            android:id="@+id/registro4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registro4"
            android:textColor="@color/secundaria"
            app:layout_constraintStart_toEndOf="@+id/registro3"
            app:layout_constraintBottom_toBottomOf="@+id/containerComponents2"
            app:layout_constraintEnd_toEndOf="@+id/containerComponents2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>